<config>

    <modules>
        <Netzarbeiter_LoginCatalog>
            <version>1.2.5</version>
        </Netzarbeiter_LoginCatalog>
    </modules>

    <global>
        <models>
            <logincatalog>
                <class>Netzarbeiter_LoginCatalog_Model</class>
            </logincatalog>
        </models>
        <helpers>
            <logincatalog>
                <class>Netzarbeiter_LoginCatalog_Helper</class>
            </logincatalog>
        </helpers>

        <resources>
            <logincatalog_setup>
                <use>default_setup</use>
            </logincatalog_setup>
            <logincatalog_write>
                <use>default_write</use>
            </logincatalog_write>
            <logincatalog_read>
                <use>default_read</use>
            </logincatalog_read>
        </resources>
    </global>

    <frontend>
        <events>
            <controller_front_init_before>
                <observers>
                    <netzarbeiter_logincatalog>
                        <type>singleton</type>
                        <class>logincatalog/observer</class>
                        <method>controllerFrontInitBefore</method>
                    </netzarbeiter_logincatalog>
                </observers>
            </controller_front_init_before>

            <controller_action_predispatch>
                <observers>
                    <netzarbeiter_logincatalog>
                        <type>singleton</type>
                        <class>logincatalog/observer</class>
                        <method>controllerActionPredispatch</method>
                    </netzarbeiter_logincatalog>
                </observers>
            </controller_action_predispatch>

            <page_block_html_topmenu_gethtml_before>
                <!-- event available since 1.7 -->
                <observers>
                    <netzarbeiter_logincatalog>
                        <type>singleton</type>
                        <class>logincatalog/observer</class>
                        <method>pageBlockHtmlTopmenuGethtmlBefore</method>
                    </netzarbeiter_logincatalog>
                </observers>
            </page_block_html_topmenu_gethtml_before>

            <catalog_product_collection_load_after>
                <observers>
                    <netzarbeiter_logincatalog>
                        <type>singleton</type>
                        <class>logincatalog/observer</class>
                        <method>catalogProductCollectionLoadAfter</method>
                    </netzarbeiter_logincatalog>
                </observers>
            </catalog_product_collection_load_after>

            <catalog_product_load_after>
                <observers>
                    <netzarbeiter_logincatalog>
                        <type>singleton</type>
                        <class>logincatalog/observer</class>
                        <method>catalogProductLoadAfter</method>
                    </netzarbeiter_logincatalog>
                </observers>
            </catalog_product_load_after>

            <catalog_category_load_after>
                <observers>
                    <netzarbeiter_logincatalog>
                        <type>singleton</type>
                        <class>logincatalog/observer</class>
                        <method>catalogCategoryLoadAfter</method>
                    </netzarbeiter_logincatalog>
                </observers>
            </catalog_category_load_after>
        </events>
    </frontend>

    <default>
        <catalog>
            <logincatalog>
                <disable_ext>0</disable_ext>
                <hide_categories>0</hide_categories>
                <redirect_for_categories>0</redirect_for_categories>
                <redirect_on_all_pages>0</redirect_on_all_pages>
                <message>Please log in to view our catalog</message>
                <disable_on_routes></disable_on_routes>
                <redirect_to_page>0</redirect_to_page>
                <cms_page></cms_page>
            </logincatalog>
        </catalog>
    </default>

    <adminhtml>
        <translate>
            <modules>
                <Netzarbeiter_LoginCatalog>
                    <files>
                        <default>Netzarbeiter_LoginCatalog.csv</default>
                    </files>
                </Netzarbeiter_LoginCatalog>
            </modules>
        </translate>
    </adminhtml>

    <phpunit>
        <suite>
            <modules>
                <Netzarbeiter_LoginCatalog/>
            </modules>
        </suite>
    </phpunit>

</config>
